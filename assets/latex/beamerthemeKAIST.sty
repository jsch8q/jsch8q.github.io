\definecolor{KAISTLightBlue}{RGB}{95, 190, 235}
\definecolor{KAISTBlue}{RGB}{20, 135, 200}
\definecolor{KAISTDarkBlue}{RGB}{0, 65, 145}
\definecolor{KAISTMediumBlue}{RGB}{0, 65, 135}

\usetheme[secheader]{Boadilla}
\usecolortheme[named=KAISTDarkBlue]{structure}
\setbeamercolor{palette primary}{use=structure,bg=KAISTDarkBlue!60!white}
\setbeamercolor{palette secondary}{use=structure,bg=KAISTDarkBlue!80!white}
\setbeamercolor{palette tertiary}{use=structure,bg=KAISTDarkBlue}
\setbeamercolor{block body}{bg=KAISTDarkBlue!10!white}
\setbeamercolor{block title}{bg=KAISTDarkBlue!25!white}
%\setbeamercolor{palette quaternary}{use=structure,bg=black}
\setbeamercolor{frametitle}{fg=KAISTDarkBlue}
\usefonttheme[onlymath]{serif}
\usefonttheme[onlylarge]{structurebold}

\setbeamertemplate{bibliography item}{}
\setbeamertemplate{theorems}[numbered]
\addtobeamertemplate{theorem begin}{\normalfont}{}
\theoremstyle{plain}
\newtheorem{exmp}{Example}
\newtheorem{proposition}[theorem]{Proposition}
\newtheorem{rmrk}{Remark}
\newtheorem*{my_fact}{Fact}
\newtheorem{claim}[theorem]{Claim}
\newtheorem{asmp}{Assumption}
\newtheorem*{asmp*}{Assumption}
\newtheorem*{theorem*}{Theorem}
\newtheorem*{proposition*}{Proposition}
\theoremstyle{definition}
\newtheorem*{definition*}{Definition}

% Different numbering for Theorems, Examples, Definition, and Lemma
% Should be used with /notheorems/ beamer option
\makeatletter
\ifbeamer@blocks
	\relax
\else
    \ifbeamer@countsect
      \newtheorem{theorem}{\translate{Theorem}}[section]
    \else
      \newtheorem{theorem}{\translate{Theorem}}
    \fi
    \newtheorem{corollary}{\translate{Corollary}}
    \newtheorem{fact}{\translate{Fact}}
    \newtheorem{lemma}{\translate{Lemma}}
    \newtheorem{problem}{\translate{Problem}}
    \newtheorem{solution}{\translate{Solution}}

    \theoremstyle{definition}
    \newtheorem{definition}{\translate{Definition}}
    \newtheorem{definitions}{\translate{Definitions}}

    \theoremstyle{example}
    \newtheorem{example}{\translate{Example}}
    \newtheorem{examples}{\translate{Examples}}
\fi
\makeatother
